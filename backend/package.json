{
  "name": "e-garage-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:garage-api": "nest start garage-api",
    "start:auth": "nest start auth",
    "start:all": "concurrently \"npm run start:garage-api\" \"npm run start:auth\"",
    "start:dev:auth": "nest start auth --watch",
    "start:dev:garage-api": "nest start garage-api --watch",
    "build": "nest build",
    "build:auth": "nest build auth",
    "build:garage-api": "nest build garage-api",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"**/*.ts\" --fix",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/swagger": "^6.3.0",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^10.4.11",
    "@nestjs/core": "^10.4.11",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-express": "^10.4.11",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.0.0",
    "mongoose": "^7.8.3",
    "prettier": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
